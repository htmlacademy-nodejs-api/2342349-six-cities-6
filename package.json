{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "tsx": "tsx",
    "cli:version": "tsx ./src/main.cli.ts --version",
    "cli:help": "tsx ./src/main.cli.ts",
    "cli:import": "tsx ./src/main.cli.ts --import mocks/mock-data.tsv"
  },
  "devDependencies": {
    "@types/node": "20.11.0",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "eslint": "8.56.0",
    "eslint-config-htmlacademy": "10.0.1",
    "rimraf": "5.0.5",
    "ts-node": "10.9.2",
    "tsx": "4.7.0",
    "typescript": "5.3.3"
  },
  "type": "module",
  "imports": {
    "#src/*": "./dist/*"
  },
  "engines": {
    "node": "^20.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "chalk": "^5.3.0"
  }
}
